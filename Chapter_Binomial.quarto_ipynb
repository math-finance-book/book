        "import matplotlib.pyplot as plt\n",
        "import time\n",
        "from math import pow, exp, sqrt\n",
        "# parameters\n",
        "# number of steps\n",
        "n = 100\n",
        "# interest rate\n",
        "r = .1\n",
        "# true drift\n",
