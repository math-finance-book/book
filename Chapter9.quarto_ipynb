        "\n",
        "inc=np.random.normal(loc = 0, scale = np.sqrt(dt),size = (n,k,m))\n",
        "\n",
        "#create correlated random increments\n",
        "Z=np.linalg.cholesky(V)\n",
        "# numpy matmul assumes last two define matrix multiplication\n",
