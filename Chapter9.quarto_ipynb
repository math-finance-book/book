        "S = 100\n",
        "Kc = 10\n",
        "Ku = 100\n",
        "r = 0.05\n",
        "sigma = 0.2\n",
        "q = 0.02\n",
        "Tc = 0.5\n",
        "Tu = 1\n",
        "\n",
        "\n",
        "print(\"Call on Call:\", call_on_call(S, Kc, Ku, r, sigma, q, Tc, Tu))"
